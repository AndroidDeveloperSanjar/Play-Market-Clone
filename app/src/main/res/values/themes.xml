<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="ThemeLight" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:colorBackground">@android:color/white</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="bottom_dialog_background">@android:color/white</item>
        <item name="window_background">@android:color/white</item>
        <item name="text_color">@android:color/black</item>
        <item name="selected_tab_text_color">@android:color/black</item>
        <item name="tab_text_color">@color/dark_back_bottom_dialog_color</item>
    </style>

    <style name="ThemeDark" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:colorBackground">@android:color/black</item>
        <item name="bottom_dialog_background">@color/dark_back_bottom_dialog_color</item>
        <item name="window_background">@android:color/black</item>
        <item name="text_color">@android:color/white</item>
        <item name="selected_tab_text_color">@android:color/holo_red_dark</item>
        <item name="tab_text_color">@color/red_back_bottom_dialog_color</item>
    </style>

    <style name="ThemeRed" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowBackground">@android:color/holo_red_dark</item>
        <item name="android:colorBackground">@android:color/holo_red_dark</item>
        <item name="bottom_dialog_background">@color/red_back_bottom_dialog_color</item>
        <item name="window_background">@android:color/holo_red_dark</item>
        <item name="text_color">@android:color/white</item>
        <item name="selected_tab_text_color">@android:color/black</item>
        <item name="tab_text_color">@color/dark_back_bottom_dialog_color</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/nexa_regular</item>
        <item name="android:background">?attr/bottom_dialog_background</item>
    </style>

    <style name="MineCustomTabText" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:textSize">17sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/nexa_regular</item>
    </style>

</resources>